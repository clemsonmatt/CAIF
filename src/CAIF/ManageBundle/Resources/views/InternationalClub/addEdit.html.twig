{% extends 'CAIFManageBundle::layout.html.twig' %}

{% set sub_nav_section = 'international-club' %}

{% block page_title_header %}
    Manage International Clubs
{% endblock %}

{% block manage_content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="{{ path('caif_manage_intl_club_index') }}">
                All International Clubs
            </a>
            {% if club is defined %}
                &raquo;
                <a href="{{ path('caif_manage_intl_club_show', {'club': club.id}) }}">
                    Club Details
                </a>
                &raquo;
                Edit
            {% else %}
                &raquo;
                Add
            {% endif %}
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
                {{ form_rest(form) }}
                <button class="btn btn-purple pull-right">
                    {{ icon('check') }}
                    Save
                </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
