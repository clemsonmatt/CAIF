{% extends 'CAIFManageBundle::layout.html.twig' %}

{% set sub_nav_section = 'emails' %}

{% block page_title_header %}
    Manage Email
{% endblock %}

{% block manage_content %}
    <h3>
        <a href="{{ path('caif_manage_email_add') }}" class="btn btn-custom btn-sm pull-right">
            {{ icon('plus') }}
            Add
        </a>
        Sent Emails
    </h3>
    <table class="table table-striped table-bordered table-hover pointer">
        <thead>
            <th>Date</th>
            <th>To</th>
            <th>Subject</th>
        </thead>
        {% for email in emails %}
            <tr class="js-row-click" id="{{ path('caif_manage_email_show', {'email': email.id}) }}">
                <td class="col-md-4">{{ email.createdAt|date('m/d/Y') }}</td>
                <td class="col-md-4">{{ email.to }}</td>
                <td class="col-md-4">{{ email.subject }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">
                    <span class="light-grey">None</span>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
