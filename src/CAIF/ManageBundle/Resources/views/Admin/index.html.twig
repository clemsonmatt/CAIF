{% extends 'CAIFManageBundle::layout.html.twig' %}

{% set sub_nav_section = 'manage-admins' %}

{% block page_title_header %}
    Manage Admins
{% endblock %}

{% block manage_content %}
    <div class="row">
        <div class="col-md-6">
            <h3>Current Admins</h3>
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <th>Name</th>
                    <th>Email</th>
                    <th style="width: 1%;"></th>
                </thead>
                {% for admin in admins %}
                    <tr>
                        <td>{{ admin }}</td>
                        <td>{{ admin.email }}</td>
                        <td>
                            <a href="{{ path('caif_manage_admins_remove', {'person': admin.id}) }}" class="btn btn-xs btn-danger">
                                {{ icon('remove') }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <div class="col-md-6">
            <h3>Members</h3>
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <th>Name</th>
                    <th>Email</th>
                    <th style="width: 1%;"></th>
                </thead>
                {% for nonAdmin in nonAdmins %}
                    <tr>
                        <td>{{ nonAdmin }}</td>
                        <td>{{ nonAdmin.email }}</td>
                        <td>
                            <a href="{{ path('caif_manage_admins_add', {'person': nonAdmin.id}) }}" class="btn btn-xs btn-default">
                                Add
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
