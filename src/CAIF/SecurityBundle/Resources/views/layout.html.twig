<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" type="image/ico" href="{{ asset('bundles/cfamanage/images/favicon.ico') }}"/>

        <title>{% block title %}CAIF Login{% endblock %}</title>

        {% block stylesheets %}
            <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
            {% stylesheets
                '@CAIFSecurityBundle/Resources/public/css/bootstrap.css'
                '@CAIFSecurityBundle/Resources/public/css/custom.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
    </head>

    <body style="background-color: #f8f8f8;">
        <div class="container">
            <div class="col-sm-12">
                {% set flashTypes = [ 'info', 'notice', 'warning', 'error', 'success'] %}
                {% set flashTypeMap = {
                    'info' : 'info',
                    'notice' : 'info',
                    'warning' : 'warning',
                    'error' : 'danger',
                    'success' : 'success',
                } %}
                {% for flashType in flashTypes %}
                    {% for flashMessage in app.session.flashbag.get(flashType) %}
                        <div class="hidden-print alert alert-{{ flashTypeMap[flashType] }}">
                            <strong>
                                {{ flashMessage|raw }}
                            </strong>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>

        {% block content %}
        {% endblock %}

        {% block javascripts %}

            {% javascripts
                'bundles/caifshared/js/jquery-1.11.1.min.js'
                'bundles/caifshared/js/lib/bootstrap/bootstrap.js'
            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}

        {% endblock %}
    </body>
</html>

