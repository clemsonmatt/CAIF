{% extends 'CAIFSharedBundle:Shared:layout.html.twig' %}
{% import 'CAIFSharedBundle:Profile:macros.html.twig' as macros %}

{% block page_title_header %}
    {{ person }}
{% endblock %}

{% block content %}
    <br>
    {{ macros.check_archived(person) }}

    <div class="col-sm-3">
        {% if person.entityType == "Student" %}
            {{ macros.student(person, 'password') }}
        {% else %}
            {{ macros.host(person, 'password') }}
        {% endif %}
    </div>
    <div class="col-sm-9">
        <br>
        {{ form_start(form) }}
            {{ form_rest(form) }}
            <button class="btn btn-purple btn-lg pull-right">
                {{ icon('check') }}
                Save
            </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
