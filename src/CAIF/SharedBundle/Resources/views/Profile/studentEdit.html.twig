{% extends 'CAIFSharedBundle:Shared:layout.html.twig' %}
{% import 'CAIFSharedBundle:Profile:macros.html.twig' as macros %}

{% block page_title_header %}
    {{ person }}
{% endblock %}

{% block content %}
    <br>
    {{ macros.check_archived(person) }}

    <div class="col-md-3">
        {{ macros.student(person, 'edit') }}
    </div>
    <div class="col-md-9">
        {{ form_start(form) }}
            <legend>
                <h3 class="light-grey">Contact Information</h3>
            </legend>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.americanName) }}
                    {{ form_row(form.phone) }}
                    {{ form_row(form.email) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.apartmentComplex) }}
                    {{ form_row(form.apartmentNumber) }}
                    {{ form_row(form.mailingAddress) }}
                    {{ form_row(form.city) }}
                    {{ form_row(form.zip) }}
                </div>
            </div>

            <legend>
                <h3 class="light-grey">Personal Information</h3>
            </legend>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.gender) }}
                    {{ form_row(form.birthday) }}
                    {{ form_row(form.homeCountry) }}
                    {{ form_row(form.areaOfStudy) }}
                    {{ form_row(form.degreeProgram) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.maritalStatus) }}
                    {{ form_row(form.spouseHere) }}
                    {{ form_row(form.spouseName) }}
                    {{ form_row(form.kidStatus) }}
                    {{ form_row(form.kidsHere) }}
                    {{ form_row(form.smoke) }}
                    {{ form_row(form.car) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    {{ form_row(form.dogCatPresence) }}
                    {{ form_row(form.allergies) }}
                    {{ form_row(form.dneFoods) }}
                    {{ form_row(form.activities) }}
                    {{ form_row(form.languages) }}
                    {{ form_row(form.travel) }}
                    {{ form_row(form.picture) }}
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <div class="pull-right">
                        <button class="btn btn-purple btn-lg">
                            {{ icon('check') }}
                            Save
                        </button>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
        <br><br>
    </div>
{% endblock %}
