<!DOCTYPE html>
<html lang="en">
    <head>
        <script src="//use.fonticons.com/2d2cc9ab.js"></script>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" type="image/ico" href="{{ asset('bundles/caifshared/images/favicon.png') }}"/>

        <title>{% block title %}CAIF{% endblock %}</title>

        {% block stylesheets %}
            <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
            {% stylesheets
                '@CAIFSharedBundle/Resources/public/css/bootstrap/bootstrap.css'
                '@CAIFSharedBundle/Resources/public/css/custom.css'
                '@CAIFSharedBundle/Resources/public/css/bootstrap-datepicker/bootstrap-datepicker.css'
                '@CAIFSharedBundle/Resources/public/css/bootstrap-timepicker/bootstrap-timepicker.css'
                '@CAIFSharedBundle/Resources/public/css/custom-typeahead.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}

        <style type="text/css">
            @font-face {
                font-family: "Lato-Light";
                src: url("{{ asset('bundles/caifshared/fonts/Lato-Light.ttf') }}")
            }
            @font-face {
                font-family: "Lato";
                src: url("{{ asset('bundles/caifshared/fonts/Lato-Light.ttf') }}")
            }
        </style>
    </head>

    <body>
        {% include 'CAIFSharedBundle:Shared:nav.html.twig' %}

        {% block flash_messages %}
            {% set flashTypes = [ 'info', 'warning', 'error', 'success'] %}
            {% set flashTypeMap = {
                'info' : 'info',
                'warning' : 'warning',
                'error' : 'danger',
                'success' : 'success',
            } %}
            {% for flashType in flashTypes %}
                {% for flashMessage in app.session.flashbag.get(flashType) %}
                    <div class="hidden-print alert alert-dismissible alert-{{ flashTypeMap[flashType] }}" role="alert" style="margin-bottom: 0px;">
                        <div class="container">
                            <strong>
                                {{ flashMessage|raw }}
                            </strong>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock %}

        {% block page_title %}
            <div class="page-heading">
                <div class="container">
                    <h1 class="color-white main-heading">
                        {% block page_title_header %}{% endblock %}
                    </h1>
                </div>
            </div>
        {% endblock %}

        <div class="content">
            <div id="page-wrapper">
                {% block container_content %}
                    <div class="container">
                        {% block content %}
                        {% endblock %}
                        <br>
                    </div>
                {% endblock %}
                <hr style="margin: 0px;">
                {% block footer %}
                    <footer style="padding-top: 20px;">
                        <div class="container">
                            <div class="row hidden-xs" style="padding: 10px 0px 30px 0px;">
                                <div class="col-sm-3">
                                    <img src="{{ asset('bundles/caifshared/images/logoOrangeSimple.png') }}" style="width: 100%;">
                                </div>
                                <div class="col-sm-9">
                                    <div class="row" style="margin-top: 10px;">
                                        <div class="col-md-4">
                                            <a href="{{ path('caif_shared_student_form') }}" class="btn btn-caif btn-block btn-lg">
                                                Student Form
                                            </a>
                                        </div>
                                        <div class="col-md-4">
                                            <a href="{{ path('caif_shared_host_form') }}" class="btn btn-caif btn-block btn-lg">
                                                Host Home Form
                                            </a>
                                        </div>
                                        <div class="col-md-4">
                                            <a href="{{ path('caif_shared_contact') }}" class="btn btn-caif btn-block btn-lg">
                                                Contact Us
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="visible-xs">
                                <center class="light-grey">
                                    <a href="https://www.facebook.com/groups/ClemsonAreaInternationalFriendship/" style="font-size: 30px;" class="light-grey" target="_blank">
                                        {{ icon('facebook-square') }}
                                    </a>
                                    <br>
                                    Copyright &copy; {{ "now"|date('Y') }}
                                    Clemson Area International Friendship
                                </center>
                            </div>
                        </div>
                        <div class="hidden-xs">
                            <div class="footer-nav">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <h4>About</h4>
                                            <a href="#">Who We Are</a>
                                            <br>
                                            <a href="#">Our Mission</a>
                                            <br>
                                            <a href="#">Testimonials</a>
                                            <br>
                                            <a href="#">Photos</a>
                                            <br>
                                            <a href="#">Board Members</a>
                                            <br>
                                        </div>
                                        <div class="col-md-3">
                                            <h4>Host Home Program</h4>
                                            <a href="#">About the Program</a>
                                            <br>
                                            <a href="#">Student Guidelines</a>
                                            <br>
                                            <a href="#">New Student Form</a>
                                            <br>
                                            <a href="#">Intro to Hosting Students</a>
                                            <br>
                                            <a href="#">Host Guidelines</a>
                                            <br>
                                            <a href="#">New Host Form</a>
                                            <br>
                                        </div>
                                        <div class="col-md-3">
                                            <h4>Helpful Resources</h4>
                                            <a href="#">Adult Learning Center</a>
                                            <br>
                                            <a href="#">Clemson Community Care</a>
                                            <br>
                                            <a href="#">Buying a Used Car</a>
                                            <br>
                                            <a href="#">English Classes</a>
                                            <br>
                                            <a href="#">When In Clemson</a>
                                            <br>
                                            <a href="#">International Services Clemson</a>
                                            <br>
                                        </div>
                                        <div class="col-md-3">
                                            <h4>Upcomming Events</h4>
                                            <a href="#">Current Events</a>
                                            <br>
                                            <a href="#">International Club (Bridges Int'l)</a>
                                            <br>
                                            <a href="#">International Wives Club</a>
                                            <br>
                                            <h4>Alumni</h4>
                                            <a href="#">About</a>
                                            <br>
                                            <a href="#">Ways to Give Back</a>
                                            <br>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div style="background-color: #ddd; padding: 10px 0px;">
                                <div class="container">
                                    <h4 class="light-grey">
                                        <a href="https://www.facebook.com/groups/ClemsonAreaInternationalFriendship/" style="font-size: 38px;" class="light-grey" target="_blank">
                                            {{ icon('facebook-square') }}
                                        </a>
                                        <a href="#" class="btn btn-footer" style="margin-top: -15px;">
                                            Donate
                                        </a>

                                        <span class="pull-right" style="padding-top: 10px;">
                                            &copy; {{ "now"|date('Y') }} Clemson Area International Friendship
                                        </span>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </footer>
                {% endblock %}
            </div>
        </div>

        {% block javascripts %}

            {% javascripts
                'bundles/caifshared/js/jquery-1.11.1.min.js'
                'bundles/caifshared/js/lib/bootstrap/bootstrap.js'
                'bundles/caifshared/js/lib/bootstrap-datepicker/bootstrap-datepicker.js'
                'bundles/caifshared/js/lib/bootstrap-timepicker/bootstrap-timepicker.js'
                'bundles/caifshared/js/bloodhound.js'
                'bundles/caifshared/js/typeahead.js'
                'bundles/caifshared/js/custom-typeahead.js'
            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}

            <script>
                $('.js-row-click').on('click', function(e) {
                    window.location.href = $(this).attr('id');
                })

                /* timepicker */
                $('.timepicker').timepicker({showInputs: false});


                /* datepicker */
                $('.datepicker').datepicker();
                $('tbody').on('click', function(e){
                    $('.datepicker-days').parent().hide();
                })

                var is_chrome = window.chrome;
                if ( is_chrome ) {
                    $('input[type=date]').on('click', function(event) {
                        event.preventDefault();
                    });

                    $('input[type=time]').on('click', function(event) {
                        event.preventDefault();
                    });
                }
            </script>

        {% endblock %}
    </body>
</html>
