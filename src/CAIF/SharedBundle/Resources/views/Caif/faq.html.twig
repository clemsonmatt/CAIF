{% block javascripts %}
    {{ parent() }}

    <script>
        $('.js-more-info').on('click', function(e){
            $('#arrow-up-' + $(this).attr('id')).toggle();
            $('#arrow-down-' + $(this).attr('id')).toggle();
        })
    </script>
